@{
    var Usuario = (Test2.Models.Usuario)Session["SessionUsuario"];

    if (Usuario == null)
    {
        HttpContext.Current.Response.Redirect("/Principal/Index");
        return;
    }
}
    <!DOCTYPE html>
    <html>
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width" />
        <title>@ViewBag.Title </title>
        @Styles.Render("~/Content/css")
        <style>
            .navbar-custom {
                color: #000000;
                background-color: #ffd800;
                float: left;
                padding: 15px 15px;
                font-size: 18px;
                line-height: 20px;
            }
        </style>
    </head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <body>
        <div class="navbar navbar-inverse navbar-fixed-top">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    @Html.ActionLink("Sistema Web - El Comercio", "Index", "Home", new { area = "" }, new { @class = "navbar-custom" })
                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">Operaciones<b class="caret"></b></a>
                            <ul class="dropdown-menu ">
                                @if (@Usuario.TipoUsuario.Equals("04"))
                                {
                                    <li>@Html.ActionLink("Bancos", "Index", "Banco", new { area = "" }, null)</li>
                                    <li>@Html.ActionLink("Sucursales", "Index", "Sucursal", new { area = "" }, null)</li>
                                }
                                @if (@Usuario.TipoUsuario.Equals("05"))
                                {
                                    <li>@Html.ActionLink("Órdenes de Pago", "Index", "OrdenPago", new { area = "" }, null)</li>
                                }

                                @if (@Usuario.TipoUsuario.Equals("06"))
                                {
                                    <li>@Html.ActionLink("Bancos", "Index", "Banco", new { area = "" }, null)</li>
                                    <li>@Html.ActionLink("Sucursales", "Index", "Sucursal", new { area = "" }, null)</li>
                                    <li>@Html.ActionLink("Órdenes de Pago", "Index", "OrdenPago", new { area = "" }, null)</li>
                                }
                            </ul>
                        </li>
                        <li>
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">Reportes<b class="caret"></b></a>
                            <ul class="dropdown-menu">
                                <li>@Html.ActionLink("Web Service Ordenes de Pago", "Index", "WS1", new { area = "" }, null)</li>
                                <li>@Html.ActionLink("Web Service Sucursales por Banco", "Index", "WS2", new { area = "" }, null)</li>
                            </ul>
                        </li>
                        <li>

                        <li>@Html.ActionLink("Salir", "Index", "Principal", new { area = "" }, new { @class = "dropdown-toggle" })</li>
                        <li class="col-lg-6"><ul class="btn btn-primary btn-lg">BIENVENIDO @Usuario.Nombre</ul></li>
                        
                        
                    </ul>
                </div>
            </div>
        </div>
        <div class="container body-content">
            @RenderBody()
            <hr />
            <footer>
                <p>&copy; @DateTime.Now.Year - Mi aplicación ASP.NET</p>
            </footer>
        </div>

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)
    </body>
</html>
